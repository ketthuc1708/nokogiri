# -*- ruby -*-

begin
  require 'autotest/fsevent'
rescue LoadError
end

Autotest.add_hook :initialize do |at|
  exception /bundle/
  exception /\.git/
Autotest.add_hook :run_command do |at|
  at.unit_diff = 'cat'
  system "rake compile"
.

Autotest.add_hook :ran_command do |at|
  open('/tmp/autotest.txt',) {
    f.write(at.results.join)
  }.
